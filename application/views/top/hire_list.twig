{% import 'parts/main_body.twig' as main %}

<h4>入社社員情報</h4>
{% if hire_list|length == 0 %}
	{{ main.info_msg("入社社員情報はありません。")}}
{% else %}
	<div id="hire-table">
		<table class="list-table">
			<thead>
				<tr class="list-head">
					{% for item in hire_list_col %}
						<td class="width-{{ item.width }}">{{ item.value }}</td>
					{% endfor %}
				</tr>
			</thead>
			<tbody id="container">
				{% for key,item in hire_list %}
					<tr>
						<td class="ta-center">{{ item.name }}</td>
						<td class="ta-center">{{ item.hire_date|date('Y年n月j日') }}</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endif %}